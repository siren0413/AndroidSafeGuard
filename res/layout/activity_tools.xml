<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yijun="http://schemas.android.com/apk/res/com.yijun.androidsafeguard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yijun.androidsafeguard.ToolsActivity" >

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#3B5998"
        android:gravity="center"
        android:text="Tools"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.yijun.androidsafeguard.ui.ItemViewWithTextview
        android:id="@+id/ui_ivwt_tools_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="phoneLocaleClick"
        yijun:title="Phone number locale query" />

</LinearLayout>