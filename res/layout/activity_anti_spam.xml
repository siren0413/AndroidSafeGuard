<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yijun="http://schemas.android.com/apk/res/com.yijun.androidsafeguard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yijun.androidsafeguard.AntiTheftActivity" >

    <TextView
        android:id="@+id/tv_antispam_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#3B5998"
        android:gravity="center"
        android:text="Anti-Spam"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_antispam_add"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:onClick="addNumber"
        android:text="Add"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lv_antispam"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>