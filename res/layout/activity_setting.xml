<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yijun="http://schemas.android.com/apk/res/com.yijun.androidsafeguard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yijun.androidsafeguard.SettingActivity" >

    <TextView
        android:id="@+id/tv_setting_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#3B5998"
        android:gravity="center"
        android:text="@string/title_settings"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.yijun.androidsafeguard.ui.ItemViewWithCheckbox
        android:id="@+id/ui_ivwc_setting_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yijun:title="check update at startup"
        yijun:statusOnText="update enabled"
        yijun:statusOffText="update disabled"
         />

</LinearLayout>